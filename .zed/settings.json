{
	"format_on_save": "on",
	"formatter": "language_server",
	"lsp": {
		"yaml-language-server": {
			"settings": {
				"yaml": {
					"schemas": {
						"https://taskfile.dev/schema.json": [
							"task.yaml",
							"task/*.yaml"
						]
					}
				}
			}
		},
		"deno": {
			"settings": {
				"deno": {
					"enable": true
				}
			}
		},
		"json-language-server": {
			"settings": {
				"json": {
					"schemas": [
						{
							"fileMatch": [
								"deno.json",
								"deno.jsonc"
							],
							"url": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json"
						},
						{
							"fileMatch": [
								"package.json"
							],
							"url": "https://www.schemastore.org/package"
						}
					]
				}
			}
		}
	},
	"languages": {
		"TypeScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"JavaScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"JSDoc": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"CSS": {
			"language_servers": [
				"tailwindcss-language-server"
			]
		}
	}
}
